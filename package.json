{
  "name": "poe-mods",
  "version": "1.5.3",
  "description": "Emulates interaction of Mods with Items, Atlas etc. in Path of Exile",
  "main": "lib/index.js",
  "files": [
    "lib/"
  ],
  "scripts": {
    "build": "npm run build:clean && npm run build:lib && npm run build:flow",
    "build:clean": "rimraf lib",
    "build:ts": "tsc --watch --noEmit",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "dev:schema": "node ./scripts/schemaRuntime",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --list-different src/**/*.ts",
    "lint": "tslint --project tsconfig.json",
    "prepublishOnly": "npm run build",
    "test": "jest --watch",
    "test:check": "jest --ci",
    "test:ci": "jest --ci --coverage --runInBand",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eps1lon/poe-mods.git"
  },
  "keywords": [
    "js",
    "poe"
  ],
  "author": "eps1lon",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eps1lon/poe-mods/issues"
  },
  "homepage": "https://github.com/eps1lon/poe-mods#readme",
  "devDependencies": {
    "@types/fetch-mock": "^5.12.2",
    "@types/lodash": "^4.14.101",
    "@types/node": "^9.4.1",
    "@types/node-fetch": "^1.6.7",
    "coveralls": "^3.0.0",
    "eslint": "^4.6.1",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-config-prettier": "^2.4.0",
    "eslint-plugin-flowtype": "^2.35.1",
    "eslint-plugin-import": "^2.7.0",
    "fetch-mock": "^6.0.0",
    "jest": "^22.0.0",
    "pre-push": "^0.1.1",
    "prettier": "^1.6.1",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.0.3",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.7.0",
    "tslint-eslint-rules": "^4.1.1",
    "typescript": "^2.7.1"
  },
  "dependencies": {
    "@types/jest": "^22.1.1",
    "lodash": "^4.17.4"
  },
  "jest": {
    "automock": false,
    "collectCoverage": false,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|ts)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "pre-push": [
    "lint",
    "format:check",
    "test:check"
  ]
}
