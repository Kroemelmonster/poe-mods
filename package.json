{
  "name": "poe-mods",
  "version": "0.0.1",
  "description": "reverse engineerd behavior of Mods in Path of Exile",
  "main": "lib/index.js",
  "files": ["lib/"],
  "scripts": {
    "build": "npm run build:clean && npm run build:lib && npm run build:flow",
    "build:clean": "rimraf lib",
    "build:lib": "babel -d lib src --ignore '**/__tests__/**'",
    "build:flow": "flow-copy-source -v -i '**/__tests__/**' src lib",
    "flow": "flow",
    "format": "prettier --write src/**/*.js",
    "prepublish": "npm run build",
    "test": "jest -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eps1lon/poe-mods.git"
  },
  "keywords": ["js", "poe"],
  "author": "eps1lon",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eps1lon/poe-mods/issues"
  },
  "homepage": "https://github.com/eps1lon/poe-mods#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-jest": "^20.0.3",
    "babel-plugin-flow-runtime": "^0.11.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-flow": "^6.23.0",
    "flow-bin": "^0.54.1",
    "flow-copy-source": "^1.2.1",
    "jest": "^20.0.4",
    "prettier": "^1.6.1",
    "regenerator-runtime": "^0.11.0",
    "rimraf": "^2.6.2"
  },
  "dependencies": {
    "lodash": "^4.17.4"
  }
}
